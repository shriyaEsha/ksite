<html>
<script src="js/jquery.js"></script>
<script>
$('html,body').mousemove(function(e){
    var amountMovedX = (e.pageX * -1 / 6);
    var amountMovedY = (e.pageY * -1 / 6);
    $('.Ccontainer').css({'marginLeft', amountMovedX + 'px ','marginTop', amountMovedY + 'px'});
});
</script>
